<Window x:Class="JWC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized" WindowStyle="None" Loaded="Window_Loaded">
    <Window.Resources>
        <RoutedUICommand x:Key="zoomincmd"></RoutedUICommand>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="OemPlus" Command="{Binding zoomincmd}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource zoomincmd}" Executed="CommandBinding_Executed"></CommandBinding>
    </Window.CommandBindings>
    <Grid x:Name="main_grid">
        <Button Content="Button" HorizontalAlignment="Left" Margin="22,155,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="22,196,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="22,235,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>

    </Grid>
</Window>
