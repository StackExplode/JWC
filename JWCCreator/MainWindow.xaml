<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:jcl="clr-namespace:JWCControlLib;assembly=JWCControlLib"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="JWCCMainWindow" x:Class="JWCCreator.MainWindow"
        Title="MainWindow" Height="703" Width="1260" Loaded="JWCCMainWindow_Loaded" MouseMove="JWCCMainWindow_MouseMove" WindowStyle="ThreeDBorderWindow" MinHeight="355" MinWidth="630">
    <DockPanel LastChildFill="True" Background="#FFDEDEDE">
        <ToolBarPanel DockPanel.Dock="Top" Height="32" HorizontalAlignment="Left">
            <ToolBar  Height="32" AllowDrop="True" Width="130" ToolBarTray.IsLocked="True"  >
                <RadioButton ToolTip="Red" Click="ColorButton_Click" Tag="1">
                    <Rectangle Width="10" Height="10" Fill="Red"/>
                </RadioButton>
                <RadioButton ToolTip="Orange" Click="ColorButton_Click" Tag="2">
                    <Rectangle Width="10" Height="10" Fill="Orange" />
                </RadioButton>
                <RadioButton ToolTip="Yellow" Click="ColorButton_Click" Tag="3">
                    <Rectangle Width="10" Height="10" Fill="Yellow" />
                </RadioButton>
                <RadioButton ToolTip="Green" Click="ColorButton_Click" Tag="4">
                    <Rectangle Width="10" Height="10" Fill="Green"/>
                </RadioButton>
                <RadioButton ToolTip="Blue" Click="ColorButton_Click" Tag="5">
                    <Rectangle Width="10" Height="10" Fill="Blue"/>
                </RadioButton>
                <RadioButton ToolTip="Purple" Click="ColorButton_Click" Tag="6">
                    <Rectangle Width="10" Height="10" Fill="Purple"/>
                </RadioButton>
                <RadioButton ToolTip="Transparent" Click="ColorButton_Click" Tag="7">
                    <Rectangle Width="10" Height="10" Fill="Black"/>
                </RadioButton>


            </ToolBar>
        </ToolBarPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="280" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ScrollViewer  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" Background="#FFFD0808" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,0,0,124"/>
                <Label Content="Hint:" VerticalAlignment="Bottom" Margin="0,0,0,100"></Label>
                <TextBlock VerticalAlignment="Bottom" TextWrapping="Wrap" Height="100"  Text="这里显示帮助文本！" Margin="5,0"></TextBlock>
            </Grid>
            
            <ScrollViewer x:Name="scrollv1" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" PanningDeceleration="1" CanContentScroll="True" ManipulationBoundaryFeedback="scrollv1_ManipulationBoundaryFeedback" PreviewMouseMove="scrollv1_MouseMove" PreviewMouseRightButtonDown="scrollv1_MouseRightButtonDown" PreviewMouseRightButtonUp="scrollv1_MouseRightButtonUp" PreviewMouseWheel="scrollv1_PreviewMouseWheel" KeyDown="scrollv1_KeyDown">


                <ScrollViewer.CacheMode>
                    <BitmapCache/>
                </ScrollViewer.CacheMode>
                <ScrollViewer.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </ScrollViewer.Background>
                <Grid x:Name="grid_main" HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920" ClipToBounds="True" MouseUp="grid2_MouseUp" Background="White">
                    <Grid.LayoutTransform>

                        <ScaleTransform x:Name="scale1" 
							CenterX="0" CenterY="0"
							ScaleX="1" ScaleY="1"
                    />
                    </Grid.LayoutTransform>

                    
                   
                    <Image x:Name="image1" HorizontalAlignment="Left" Height="100" Margin="159,131,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" MouseLeftButtonDown="image1_MouseLeftButtonDown" MouseMove="image1_MouseMove" MouseLeftButtonUp="image1_MouseLeftButtonUp"/>
                </Grid>
            </ScrollViewer>
        </Grid>


    </DockPanel>
</Window>
